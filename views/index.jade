html
	head
		title Terry Soundboard
	body
		header 
			h1 Terry, man about Canavan's
		section.soundboard
			each item in soundboardItems
				.soundboard-item(data-id="#{item.id}", data-src="audio/#{item.src}")= item.text
		footer 
			h3 Made by Claire and Malcolm

		script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js", type="text/javascript")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/SoundJS/0.6.0/soundjs.min.js", type="text/javascript")
		script(src="js/bundle.js", type="text/javascript")
