  "dependencies": {
    "express": "~4.12.2",
    "jade": "~1.9.2",
    "jquery": "^2.1.3"
  },
  "devDependencies": {
    "browserify": "~9.0.3",
    "live-reload": "~1.1.0",
    "watch": "^0.14.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:js": "browserify src/main.js > public/js/bundle.js",
    "watch:js": "watch 'npm run build:js' src/",
    "build:css": "lessc styles/styles.less public/css/styles.css",
    "watch:css": "watch 'npm run build:css' styles/",
    "build": "npm run build:js && npm run build:css",
    "build:watch": "parallelshell 'npm run watch:js' 'npm run watch:css' 'node app.js' 'npm run live-reload'",
    "live-reload": "live-reload --port 9091 public/"
  }
}
